<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MediumBoldText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputEditTextDecimalSmall">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="detailPropertyStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="detailPropertyStyleForTotal" parent="detailPropertyStyle">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="detailValueStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/background_shape</item>
    </style>

    <style name="detailValueStyleForTotal" parent="detailValueStyle">
        <item name="android:background">@drawable/background_shape_accent</item>
    </style>

    <style name="detailTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailTitleStyleForTotal" parent="detailTitle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


</resources>